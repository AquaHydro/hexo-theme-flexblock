.header-container.post .post-text {
  text-align: left
}

.header-container {
  position: relative
}

.header-content {
  position: relative
  width: 100%
  height: var(--banner-height)
  margin: auto
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
}

.post-image {
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: -1
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  z-index: auto

  &:before {
    position: absolute
    top: 0
    left: 0
    display: block
    content: ''
    width: 100%
    height: 100%
    opacity: 0.4
    background-color: #394245
    background-image: linear-gradient(234deg, #394245 0%, #000 100%)
  }
}
    
// post text
.post-text {
  overflow: hidden
  text-align: center
  color: var(--theme-text-light)
  padding: var(--content-large-padding)
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
}

// title
.title-wrap {
  font-size: var(--font-large-size)
  font-weight: bolder
  overflow: hidden
  text-overflow: ellipsis
  word-break: break-word
}

// sub title
.title-sub-wrap {
  margin-top: 18px
  font-size: var(--font-common-size)
  margin: 0 auto
  width: 8em
  white-space: nowrap
  border-right: 2px solid transparent
  animation: typing 2s steps(8, end), blink-caret .75s step-end infinite
  overflow: hidden
}

@keyframes typing {
  from { width: 0; }
  to { width: 8em; }
}

@keyframes blink-caret {
  from, to { box-shadow: 1px 0 0 0 transparent; }
  50% { box-shadow: 1px 0 0 0; }
}

// post-time
.post-time {
  font-size: var(--font-base-size)
  margin-top: 10px
}

// last time
.last-time {
  font-size: var(--font-base-size)
  margin-top: 10px
}